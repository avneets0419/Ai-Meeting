// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  googleId  String?
  avatar    String?
  createdAt DateTime @default(now())
  meetings  Meeting[]
  events    Event[]
  tasks     Task[]
}

model Meeting {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  transcriptionId String   @unique  // This already creates an index
  title           String
  label           String?
  time            String?
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @db.ObjectId
  shortSummary    String
  LongSummary     String
  transcript      String?  @db.String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt(sort: Desc)])  // Only this compound index
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  start       DateTime
  end         DateTime
  allDay      Boolean  @default(false)
  color       String?
  location    String?
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String   // "todo" | "in-progress" | "completed"
  startAt     DateTime
  endAt       DateTime
  ownerId     String   @db.ObjectId
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}